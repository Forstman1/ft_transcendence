FROM node:20-alpine3.17

RUN apk --update add \
    build-base \
    cairo-dev \
    pango-dev \
    giflib-dev \
    pixman-dev \
    pangomm-dev \
    libjpeg-turbo-dev

WORKDIR /usr/src/app

RUN npm install -g npm@10.2.4
RUN npm install -g next

COPY package*.json ./

COPY . .

RUN chmod +x init.sh

EXPOSE 3000

ENTRYPOINT ["sh", "/usr/src/app/init.sh"]
CMD ["npm", "run", "dev"]
