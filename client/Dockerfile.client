FROM node:20-alpine3.17

RUN apk --update add \
    build-base \
    cairo-dev \
    pango-dev \
    giflib-dev \
    pixman-dev \
    pangomm-dev \
    libjpeg-turbo-dev

WORKDIR /usr/src/app

RUN npm install -g npm@10.2.4

COPY package*.json ./
RUN npm install

COPY . .

EXPOSE 3000

CMD ["npm", "run", "dev"]
